<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff"
              android:orientation="vertical"
              android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp">

        <LinearLayout
            style="@style/comment_weight_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/item_conmment_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="name"
                android:textColor="#0070B3"
                android:textSize="@dimen/size_comment_item"
                android:textStyle="bold"/>

            <com.huanhong.decathlonstb.custom.Star
                android:id="@+id/item_conmment_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            style="@style/comment_weight_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="·"
                android:textColor="#0070B3"
                android:textSize="@dimen/size_comment_item"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="comment"
                android:textColor="#0070B3"
                android:textSize="@dimen/size_comment_item"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_comment_reply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <LinearLayout
            style="@style/comment_weight_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="店长回复"
                android:textColor="#00B560"
                android:textSize="@dimen/size_comment_item"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            style="@style/comment_weight_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="·"
                android:textColor="#00B560"
                android:textSize="@dimen/size_comment_item"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_comment_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="reply"
                android:textColor="#00B560"
                android:textSize="@dimen/size_comment_item"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>