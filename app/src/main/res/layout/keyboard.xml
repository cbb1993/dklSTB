<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableRow>

            <TextView
                android:id="@+id/keyboard_0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/press_stroke_bray"
                android:gravity="center"
                android:text="0"
                android:textColor="@drawable/btn"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/keyboard_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/press_stroke_bray"
                android:gravity="center"
                android:text="1"
                android:textColor="@drawable/btn"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/keyboard_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/press_stroke_bray"
                android:gravity="center"
                android:text="2"
                android:textColor="@drawable/btn"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/keyboard_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/press_stroke_bray"
                android:gravity="center"
                android:text="3"
                android:textColor="@drawable/btn"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/keyboard_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/press_stroke_bray"
                android:gravity="center"
                android:text="4"
                android:textColor="@drawable/btn"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/keyboard_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/press_stroke_bray"
                android:gravity="center"
                android:text="5"
                android:textColor="@drawable/btn"
                android:textSize="18sp" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/keyboard_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/press_stroke_bray"
                android:gravity="center"
                android:text="6"
                android:textColor="@drawable/btn"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/keyboard_7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/press_stroke_bray"
                android:gravity="center"
                android:text="7"
                android:textColor="@drawable/btn"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/keyboard_8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/press_stroke_bray"
                android:gravity="center"
                android:text="8"
                android:textColor="@drawable/btn"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/keyboard_9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/press_stroke_bray"
                android:gravity="center"
                android:text="9"
                android:textColor="@drawable/btn"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/keyboard_10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/press_stroke_bray"
                android:gravity="center"
                android:text="0"
                android:textColor="@drawable/btn"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/keyboard_11"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/press_stroke_bray"
                android:gravity="center"
                android:text="X"
                android:textColor="@drawable/btn"
                android:textSize="18sp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>